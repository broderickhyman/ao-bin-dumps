<?xml version="1.0" encoding="utf-8"?>
<hotkeydefaults xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="hotkeydefaults.xsd">
    
    <!-- Spell slots -->
    <category name="@OPTIONS_KEYBINDING_CATEGORY_SPELLS">
        <hotkey action="MainHand1" keycode="Q" />
        <hotkey action="MainHand1_self" keycode="Q" modifier="Alt" />
        <hotkey action="MainHand2" keycode="W" />
        <hotkey action="MainHand2_self" keycode="W" modifier="Alt" />
        <hotkey action="OffHandOrMainHand3" keycode="E" />
        <hotkey action="OffHandOrMainHand3_self" keycode="E" modifier="Alt" />
        <hotkey action="Head" keycode="D" />
        <hotkey action="Head_self" keycode="D" modifier="Alt" />
        <hotkey action="Armor" keycode="R" />
        <hotkey action="Armor_self" keycode="R" modifier="Alt" />
        <hotkey action="Shoes" keycode="F" />
        <hotkey action="Shoes_self" keycode="F" modifier="Alt" />

        <hotkey action="Potion" keycode="Alpha1" />
        <hotkey action="Food" keycode="Alpha2" />

        <hotkey action="Mount" keycode="A" />
        <hotkey action="Overcharge" keycode="O" modifier="Shift" />

        <hotkey action="ToggleVanitySpells" keycode="V" modifier="Shift" />
    </category>
    
    <!-- Shortcuts -->
    <category name="@OPTIONS_KEYBINDING_CATEGORY_GAMEPLAY">
        <hotkey action="AttackTarget" keycode="Space" />
        <hotkey action="DeselectTarget" keycode="S" modifier="Alt" />
        <hotkey action="SelectSelf" keycode="S" modifier="Control" />
        <hotkey action="InspectTarget" keycode="Y" />
        <hotkey action="SelectPartyMember1" keycode="F1" />
        <hotkey action="SelectPartyMember2" keycode="F2" />
        <hotkey action="SelectPartyMember3" keycode="F3" />
        <hotkey action="SelectPartyMember4" keycode="F4" />
        <hotkey action="SelectPartyMember5" keycode="F5" />
        <hotkey action="SelectPartyMember6" keycode="F6" />
        <hotkey action="SelectPartyMember7" keycode="F7" />
        <hotkey action="SelectPartyMember8" keycode="F8" />
        <hotkey action="SelectPartyMember9" keycode="F9" />
        <hotkey action="SelectPartyMember10" keycode="F10" />
        <hotkey action="SelectPartyMember11" keycode="F11" />
        <hotkey action="SelectPartyMember12" keycode="F12" />
        <hotkey action="SelectPartyMember13" keycode="Alpha3" />
        <hotkey action="SelectPartyMember14" keycode="Alpha4" />
        <hotkey action="SelectPartyMember15" keycode="Alpha5" />
        <hotkey action="SelectPartyMember16" keycode="Alpha6" />
        <hotkey action="SelectPartyMember17" keycode="Alpha7" />
        <hotkey action="SelectPartyMember18" keycode="Alpha8" />
        <hotkey action="SelectPartyMember19" keycode="Alpha9" />
        <hotkey action="SelectPartyMember20" keycode="Alpha0" />
        <hotkey action="ToggleMatchStats" keycode="Tab" />
        <hotkey action="StopAnyAction" keycode="S" />
        <hotkey action="ForceCombatMode" keycode="K" modifier="Control" />
        <hotkey action="AutoRun" keycode="Numlock" />
        <hotkey action="PingOwnPosition" keycode="P" />
        <hotkey action="PingAttackOwnPosition" keycode="P" modifier="Control" />
        <hotkey action="PingDefendOwnPosition" keycode="P" modifier="Shift" />
        <hotkey action="SelectMarkedObject1" keycode="None" />
        <hotkey action="SelectMarkedObject2" keycode="None" />
        <hotkey action="SelectMarkedObject3" keycode="None" />
        <hotkey action="SelectMarkedObject4" keycode="None" />
        <hotkey action="SelectMarkedObject5" keycode="None" />
        <hotkey action="SelectMarkedObject6" keycode="None" />
        <hotkey action="MarkObject1" keycode="None" />
        <hotkey action="MarkObject2" keycode="None" />
        <hotkey action="MarkObject3" keycode="None" />
        <hotkey action="MarkObject4" keycode="None" />
        <hotkey action="MarkObject5" keycode="None" />
        <hotkey action="MarkObject6" keycode="None" />
        <hotkey action="UnMarkObject" keycode="None" />
    </category>

    <!-- Gui Windows -->
    <category name="@OPTIONS_KEYBINDING_CATEGORY_INTERFACE">
        <hotkey action="CloseAllWindows" keycode="Escape" />
        <hotkey action="CharacterInfo" keycode="I" />
        <hotkey action="AchievementBoard" keycode="B" />
        <hotkey action="ClusterMap" keycode="N" />
        <hotkey action="WorldMap" keycode="M" />
        <hotkey action="GuildGui" keycode="G" />
        <hotkey action="GuildFinder" keycode="G" modifier="Shift"/>
        <hotkey action="BuildBuilding" keycode="H" />
        <hotkey action="HideGui" keycode="H" modifier="Alt" />
        <hotkey action="RecordingMode" keycode="J" modifier="Alt" />
        <hotkey action="Social" keycode="O" />
        <hotkey action="FactionInfo" keycode="F" modifier="Shift" />
        <hotkey action="VanitySelect" keycode="V" />
        <hotkey action="Loadouts" keycode="L" />
        <hotkey action="Stack" keycode="None" modifier="None" />
        <hotkey action="Sort" keycode="None" modifier="None" />
    </category>

    <!-- Emote slots -->
    <category name="@OPTIONS_KEYBINDING_CATEGORY_EMOTES">
        <hotkey action="Emote1" keycode="None" />
        <hotkey action="Emote2" keycode="None" />
        <hotkey action="Emote3" keycode="None" />
        <hotkey action="Emote4" keycode="None" />
        <hotkey action="Emote5" keycode="None" />
    </category>

    <!-- DEBUG -->
    <category name="Macros">
        <hotkey action="Macro0" keycode="Keypad0" />
        <hotkey action="Macro1" keycode="Keypad1" />
        <hotkey action="Macro2" keycode="Keypad2" />
        <hotkey action="Macro3" keycode="Keypad3" />
        <hotkey action="Macro4" keycode="Keypad4" />
        <hotkey action="Macro5" keycode="Keypad5" />
        <hotkey action="Macro6" keycode="Keypad6" />
        <hotkey action="Macro7" keycode="Keypad7" />
        <hotkey action="Macro8" keycode="Keypad8" />
        <hotkey action="Macro9" keycode="Keypad9" />
    </category>

</hotkeydefaults>
