    <arenacategory name="unranked" ruleset="stdgvg" cluster="ARENA-STANDARD" matchtype="MATCH_ARENA" displayname="@ARENA_UNRANKED"
                   startingelo="1200" elok="20" subeloweight="1.0" groupeloweight="1.0"
                   elopersecond="10" eloradiusbase="20" minpotentials="1" maxpotentials="200"
                   scoreperelodiff="-5" scorepersecond="2" scorefirsthealer="100" 
                   scoregroupbalance="100" scoreunmatchedfullpremade="-1000"
                   minitempoweraverage="700" arenamatchtype="arena">

      <neededitemroles>
        <role itemroleid="ARENA_HEAL" min="1" max="1" />
      </neededitemroles>

      <groupcompositions>
        <groupcomposition size="2" allowedallies="" allowedenemies="2;1,1"/>
      </groupcompositions>

      <rewards rewardsperday="3">
        <itemreward itemid="QUESTITEM_TOKEN_ARENA_UNRANKED" enchantmentlevel="0" count="3"/>
